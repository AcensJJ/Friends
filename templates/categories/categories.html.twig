
{% extends 'base.html.Twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/accueil/css/main.css') }}" />
{% endblock %}

{% block body %}

	<section class="tiless"> 
		{% for categorie in categories %}
		<article class="style{{i}}" style="width: {{size[a]}}px;">						
			<span class="image">
				<img style="height: 300px; width: {{size[a]}}px;" src="{{ asset(categorie.image) }}" alt="" />
			</span>
			<a href="{{ path('souscategories',{"id":categorie.id})}}">
				<h2 style="color: white;">{{ categorie.name }}</h2>
				<div class="content">
					<p>Voir cette catégorie !</p>
				</div>
			</a>
		</article>
		{# boucle i -> 1 à 6 #}
		{% set i = i + 1 %}
		{% if i > 6 %}
		{% set i = 1 %}
		{% endif %}
		{# boucle a -> 1 à 6 #}
		{% set a = a + 1 %}
		{% if a > 9 %}
		{% set a = 1 %}
		{% endif %}

		{% endfor %}			
	</section>
{% endblock %}
{% block javascripts %}


{% endblock %}
