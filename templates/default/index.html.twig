<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document" style="margin-top: 13%;">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Vos abonnements</h5>
      </div>	
      <div class="modal-body">
        {% for follow in followings %}
				<div class="request-details">
					<div class="noty-user-img">
						<img style="width: 100px; height: 100px;" src="{{ asset(follow.following.dataUser.link) }}" alt="">
					</div>		  		
					<div class="request-info"><p>{{follow.following.civility.firstName}}  {{follow.following.civility.name}}</p></div>  				
				</div><!--request-detailse end-->
				<!-- code here -->
   			{% endfor %}
      </div>
    
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModal2Label" aria-hidden="true">
  <div class="modal-dialog" role="document"  style="margin-top: 13%;">
