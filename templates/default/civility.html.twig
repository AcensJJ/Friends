{% extends 'base.html.twig' %}

{% block title %}Name - {{ controller_name }}{% endblock %}

{% block body %} 
	<main>
		<div class="main-section">
			<div class="container">
				<div class="main-section-data">
					<div class="row">
                        <!-- BT grille -->
						<div class="col-lg-3 col-md-4 pd-left-none no-pd">
							<div class="main-left-sidebar no-margin"></div>
						</div>
                        <!-- affichage form -->
						<div class="col-lg-6 col-md-8 no-pd">
							<div class="main-ws-sec">
								<div class="post-topbar">
									 <div class="field">
                                        {{ form_start(form, {'method': 'post', 'action': path('civility'), 'attr': {'class': 'ui form'}}) }}
                                        {{ form_widget(form) }}
                                    </div>

                                    <div class="ui checkbox">
                                    </div>
                                    <div> 
                                        <input class="ui button" type="submit" id="_submit" value="Envoyer" />
                                    </div>
                                    
                                    {{ form_end(form) }}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div> 
		</div>
	</main>
</div><!--theme-layout end-->
{% endblock %}
